# ===================================
# إعدادات قاعدة البيانات
# ===================================
MONGODB_URI=mongodb://localhost:27017/healthcare_management

# ===================================
# إعدادات الأمان - مفتاح JWT
# ===================================
# استخدم الأمر التالي لتوليد مفتاح عشوائي آمن:
# node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_super_secret_jwt_key_here_change_this_in_production

# ===================================
# إعدادات السيرفر
# ===================================
PORT=5000
NODE_ENV=development

# ===================================
# إعدادات CORS
# ===================================
# عناوين URL المسموح لها بالوصول إلى API
# في الإنتاج، ضع عنوان موقعك الفعلي فقط
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:5174,http://localhost:3000

# ===================================
# إعدادات JWT
# ===================================
# مدة صلاحية الرمز (token)
JWT_EXPIRES_IN=7d

# ===================================
# إعدادات Rate Limiting
# ===================================
# عدد الطلبات المسموح بها في النافذة الزمنية
RATE_LIMIT_MAX=100
# النافذة الزمنية بالدقائق
RATE_LIMIT_WINDOW_MS=15

# ===================================
# إعدادات HTTPS (للإنتاج فقط)
# ===================================
# SSL_KEY_PATH=/path/to/private-key.pem
# SSL_CERT_PATH=/path/to/certificate.pem
